FROM nvidia/cuda:11.8.0-devel-ubuntu22.04

WORKDIR /root
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -q -y \
    git \
    cmake \
    libglu1-mesa-dev \
    freeglut3-dev \
    mesa-common-dev \
    qtbase5-dev \
    qtchooser \
    qt5-qmake \
    qtbase5-dev-tools \
    gh

RUN git clone https://github.com/BrownBiomechanics/Autoscoper.git